<%= form_with(model: [:admin, @question, answer]) do |form| %>
  <%= render 'shared/errors', resource: answer %>
  <div class="mb-3">
    <%= form.label :body, class: 'form-label' %>
    <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60, class: 'form-control' %>
  </div>

  <div class="form-check">
    <%= form.label :correct, class: 'form-check-label' %>
    <%= form.check_box :correct, id: :answer_correct, class: 'form-check-input' %>
  </div>

  <div class="float-end">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
