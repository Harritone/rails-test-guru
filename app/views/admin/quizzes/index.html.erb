<h2><%= t('.header') %></h2>

<%= render 'shared/errors', resource: @quiz %>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= t('.category') %></th>
      <th scope="col" class="sort-by-title">
        <%= t('.title') %>
        <i class="fas fa-caret-down text-success d-none"></i>
        <i class="fas fa-caret-up text-success d-none"></i>
      </th>
      <th scope="col"><%= t('.level') %></th>
      <th scope="col"><%= t('.questions_count') %></th>
      <th scope="col"><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @quizzes %>
  </tbody>
</table>
<%= link_to t('.add'), new_admin_quiz_path %>
