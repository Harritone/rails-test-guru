<h1>
  <%= question_header(@quiz || @quiz_for_header, question) %>
</h1>

<%= form_with model: [@quiz, question] do |form| %> 
  <%= render 'shared/errors', resource: question %>
  <div class="field">
    <%= form.label :body %> 
    <%= form.text_area :body, cols: 30, rows: 10 %>
  </div>
  <br />

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<br />
