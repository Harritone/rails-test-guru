<% if resource.present? && resource.errors.any?%>
<%= content_tag :div, class: 'resource-errors alert alert-danger', data: {resource_id: resource.id } do %>
  <h2>
    <%= t('.header', count: resource.errors.count, source: resource.model_name.human) %>:
  </h2>

  <ul>
    <% resource.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
<% end %>
<% end %>
